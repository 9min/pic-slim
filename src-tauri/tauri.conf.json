{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PicSlim",
  "version": "0.1.3",
  "identifier": "com.picslim.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PicSlim - 이미지 용량 최적화",
        "width": 900,
        "height": 650,
        "minWidth": 700,
        "minHeight": 500,
        "center": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": false,
        "languages": ["Korean", "English"]
      }
    }
  }
}
